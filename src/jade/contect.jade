include ./mixins.jade

.contact-p.content-block-full

    .container
        +back-arrow('fa-chevron-up', 'contact-p')
        .row.page-controls.text-center.margin-top-55.margin-bottom-55
            +page-title('GET IN TOUCH', 'GET IN TOUCH')
        .row
            .col-md-12.form-title.text-center.margin-bottom-55
                h4 HOW I CAN HELP YOU?
            .col-lg-2.col-xl-3.col-sm-1
            .col-lg-8.col-xl-6.col-sm-10
                form.margin-bottom-89
                    .form-row
                        .col-md-6
                            input(type='text', placeholder='YOUR NAME').form-control
                        .col-md-6
                            input(type='text', placeholder='YOUR E-MAIL').form-control
                        .col-md-12
                            input(type='text', placeholder='SUBJECT').form-control
                        .col-md-12
                            textarea(rows="6", placeholder='MESSAGE').form-control
                        .col-md-12
                            button(type='button', data-toggle="modal", data-target="#contactModal").red-btn Submit
            .col-lg-2.col-xl-3.col-sm-1
            .col-lg-2.col-xl-3.col-sm-1
            .col-lg-8.col-xl-6.col-sm-10.margin-bottom-89
                .row
                    .col-sm-6.col-xs-6.c-block
                        img(src='./img/с1.jpg')
                        .text
                            .title PHONE
                            .val +1 (386) 302 9999
                    .col-sm-6.col-xs-6.c-block
                        img(src='./img/с2.jpg')
                        .text
                            .title E-MAIL
                            .val NataliyaYeromina@gmai.com
            .col-lg-2.col-xl-3.col-sm-1

            .col-md-12
                #contactModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='contactModalCenterTitle', aria-hidden='true')
                    .modal-dialog.modal-dialog-centered(role='document')
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                    span(aria-hidden='true') ×
                            .modal-body 
                                p Thank you 
                                p for your letter
                                p I will connect with you as soon as possible.
        
    include footer.jade
